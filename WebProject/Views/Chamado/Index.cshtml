@model IEnumerable<API.Domain.DTOs.Chamado.ChamadoDto>

<div class="row">
    <div style="width:100%">
        <div class="card">
            <div class="card-header card-header-tabs card-header-warning">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title">Filtros:</span>
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#profile" data-toggle="tab">
                                    <i class="material-icons">bug_report</i> Todos
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="profile">
                        <table class="table">
                            <thead>
                                <tr>
                                     <th>
                                        Número
                                    </th>
                                    <th>
                                        Tipo Chamado
                                    </th>
                                    <th>
                                        Usuário
                                    </th>
                                    <th>
                                        Data Abertura
                                    </th>
                                    <th>
                                        Data Modificação
                                    </th>
                                    <th>
                                        Criticidade
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Ações
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoChamado.Descricao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UsuarioChamado.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DtChamadoAbertura)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DtChamadoUltimaAcao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChamadoCriticidade.Descricao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChamadoStatus.Descricao)
                                        </td>
                                        <td class="td-actions text-right">
                                            <a asp-action="Details" asp-route-id="@item.Id" title="Ver" class="btn btn-white btn-link btn-sm">
                                                <i class="material-icons">info</i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-white btn-link btn-sm">
                                                <i class="material-icons">edit</i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" title="Remover" class="btn btn-white btn-link btn-sm">
                                                <i class="material-icons">close</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div>
                            <a asp-action="Create" class="btn btn-warning pull-right">Novo<div class="ripple-container"></div></a>
                        </div>
                    </div>
                    <div class="tab-pane" id="settings">
                        <table class="table">
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var elementClicked = document.getElementById("MenuCategoria");
    elementClicked.classList.add("active");
</script>
