@model API.Domain.DTOs.Categoria.CategoriaDto

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div style="width:100%">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h4 class="card-title">Editar Projeto</h4>
                        <p class="card-category">Altere os dados do projeto</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label class="control-label">Descrição</label>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Url Imagem</label>
                                <input asp-for="ImagemUrl" class="form-control" />
                                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-action="Index" type="submit" value="Voltar" class="btn btn-default" />
                                <input type="submit" value="Salvar" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var elementClicked = document.getElementById("MenuCategoria");
    elementClicked.classList.add("active");
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
