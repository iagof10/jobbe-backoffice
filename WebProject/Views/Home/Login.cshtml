@model API.Domain.DTOs.User.UserLoginDtoInput


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Cognix</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="vendor/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="vendor/css/util.css">
    <link rel="stylesheet" type="text/css" href="vendor/css/main.css">
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form asp-action="Login" class="login100-form validate-form">
                    <span class="login100-form-title">
                        Login
                    </span>
                    <span style="padding-bottom:10vh;color: #ffffff" class="w-full text-center p-t-27">
                        Insira suas credenciais de Login do Backoffice Jobbe
                    </span>
                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20"
                         data-validate="Type user name">
                        <input asp-for="KeyUser" id="first-name" class="input100" type="text"
                               placeholder="Usuário">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20"
                         data-validate="Type password">
                        <input asp-for="Password" class="input100" type="password"
                               placeholder="Senha">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100 m-b-20" id="FrameRegisterLogin" style="visibility:hidden; height:0px;width:0px"
                         data-validate="Type password">
                        <input asp-for="NewPassword" class="input100" type="password"
                               placeholder="Nova Senha">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <input id="btnlogin" type="submit" value="Login" class="login100-form-btn" />
                    </div>
                    <div id="divtricarsenha" class="w-full text-center p-t-27 p-b-239">
                        <span class="txt1">
                            Trocar
                        </span>
                        <span onclick="RegisterLogin()" class="txt2">
                            senha?
                        </span>
                    </div>
                </form>
                <div class="login100-more" style="background-image: url('vendor/images/bg-01.jpg');"></div>
            </div>
        </div>
    </div>
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor/select2/select2.min.js"></script>
    <script>

        function RegisterLogin() {
            document.getElementById('FrameRegisterLogin').style.visibility = 'visible'
            document.getElementById('FrameRegisterLogin').style.height = 'auto'
            document.getElementById('FrameRegisterLogin').style.width = '100%'
            document.getElementById('btnlogin').value = 'Trocar Senha'
            document.getElementById('divtricarsenha').style.visibility = 'hidden'
        }

    </script>
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <script src="vendor/js/main.js"></script>
</body>
</html>