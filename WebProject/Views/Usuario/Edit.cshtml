@model API.Domain.DTOs.Usuario.UsuarioDto


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div style="width:100%">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h4 class="card-title">Editar Usuário</h4>
                        <p class="card-category">Altere os dados do usuário</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label class="control-label">Nome</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Apelido</label>
                                <input asp-for="Apelido" class="form-control" />
                                <span asp-validation-for="Apelido" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">TipoUsuario</label>
                                <input asp-for="TipoUsuario" class="form-control" />
                                <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ativo</label>
                                <input asp-for="Ativo" class="form-control" />
                                <span asp-validation-for="Ativo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Validado</label>
                                <input asp-for="Validado" class="form-control" />
                                <span asp-validation-for="Validado" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">IdFotoPerfil</label>
                                <input asp-for="IdFotoPerfil" class="form-control" />
                                <span asp-validation-for="IdFotoPerfil" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">NomeFotoPerfil</label>
                                <input asp-for="NomeFotoPerfil" class="form-control" />
                                <span asp-validation-for="NomeFotoPerfil" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Senha</label>
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">ChaveUsuario</label>
                                <input asp-for="ChaveUsuario" class="form-control" />
                                <span asp-validation-for="ChaveUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-action="Index" type="submit" value="Voltar" class="btn btn-default" />
                                <input type="submit" value="Salvar" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var elementClicked = document.getElementById("MenuCategoria");
    elementClicked.classList.add("active");
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
